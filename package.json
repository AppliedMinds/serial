{
  "name": "@ami/serial",
  "version": "2.2.2",
  "description": "AMI Serial Wrapper",
  "main": "index.js",
  "publishConfig": {
    "registry": "http://npm:4873"
  },
  "scripts": {
    "lint": "eslint --ext .js .",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "verbose": true,
    "silent": true
  },
  "dependencies": {
    "serialport": "^9.2.8"
  },
  "repository": {
    "type": "git",
    "url": "https://am-gitlab.amthinking.net/software-engineering-tools/js/ami-serial"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/plugin-proposal-throw-expressions": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^27.5.1",
    "eslint": "^8.8.0",
    "eslint-plugin-jest": "^26.1.0",
    "jest": "^27.5.1"
  },
  "author": "Ivo Janssen <ijanssen@appliedminds.com>",
  "license": "UNLICENSED",
  "eslintConfig": {
    "env": {
      "es6": true,
      "jest/globals": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "camelcase": "error",
      "eqeqeq": [
        "warn",
        "always"
      ],
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "info",
            "error"
          ]
        }
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "prefer-const": "warn",
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
